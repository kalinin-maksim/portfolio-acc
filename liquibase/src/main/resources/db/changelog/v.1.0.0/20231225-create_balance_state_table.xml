<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_balance_state_table"
               author="---">

        <createTable tableName="${prefix}balance_state"
                     remarks="balance_state">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_balance_state_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="operation_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="booking_date" type="date"/>
        </createTable>

    </changeSet>

    <changeSet id="20231225-add_unique_constraint"
               author="---">
        <addUniqueConstraint tableName="${prefix}balance_state" columnNames="operation_date"/>
    </changeSet>

</databaseChangeLog>