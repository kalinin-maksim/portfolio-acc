<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_posting_table"
               author="---">

        <createTable tableName="${prefix}posting">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_posting_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="branch" type="varchar(255)"/>
            <column name="accounting_id" type="integer"/>
            <column name="event_id" type="varchar(255)"/>
            <column name="channel_name" type="varchar(255)"/>
            <column name="deal_id" type="varchar(255)"/>
            <column name="document_id" type="varchar(255)"/>
            <column name="value_date" type="date"/>
            <column name="booking_date" type="date"/>
            <column name="operation_time_stamp" type="timestamp"/>
            <column name="source_of_posting" type="varchar(255)"/>
            <column name="account_number" type="varchar(255)"/>
            <column name="sign" type="varchar(1)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="varchar(255)"/>
            <column name="amount" type="decimal"/>
            <column name="local_amount" type="decimal"/>
            <column name="narrative" type="varchar(255)"/>
            <column name="active" type="boolean"/>
            <column name="event_type" type="varchar(255)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>