<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_gl_code_table"
               author="---">

        <createTable tableName="${prefix}gl_code">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_gl_code_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="parent_id" type="varchar(32)"/>
        </createTable>

    </changeSet>

    <changeSet id="20231225-add_foreign_key_constraint"
               author="---">
        <addForeignKeyConstraint baseTableName="${prefix}gl_code" baseColumnNames="parent_id"
                                 referencedTableName="${prefix}gl_code" referencedColumnNames="id"
                                 constraintName="fk_gl_code_parent_id__gl_code_id"/>
    </changeSet>

</databaseChangeLog>