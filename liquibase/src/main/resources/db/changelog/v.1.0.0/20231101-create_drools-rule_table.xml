<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231101-create_drools-rule_table"
               author="---">

        <createTable tableName="${prefix}drools_rule"
                     remarks="drools rule">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_drools_rule_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" remarks="role name"/>
            <column name="body" type="VARCHAR(4096)" remarks="drools rule body"/>
            <column name="pattern" type="VARCHAR(4096)" remarks=""/>
            <column name="result" type="VARCHAR(4096)" remarks=""/>
            <column name="deleted"
                    type="boolean">
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>