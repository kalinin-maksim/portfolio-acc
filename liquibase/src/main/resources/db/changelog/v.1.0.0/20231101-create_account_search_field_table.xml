<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231101-create_account_search_field_table"
               author="---">

        <createTable tableName="${prefix}account_search_field"
                     remarks="account search field">
            <column name="account_class_id"
                    type="${uuid_type}"
                    remarks="Account class ID generated by the system">
                <constraints primaryKeyName="pk_account_search_field_class_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="account_field" type="VARCHAR(255)"/>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="account_class_id"
                                 baseTableName="${prefix}account_search_field"
                                 constraintName="fk_account_search_field_account_class_id"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="${prefix}account_class"/>

    </changeSet>

</databaseChangeLog>