<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_gl_balance_table"
               author="---">

        <createTable tableName="${prefix}gl_balance">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_gl_balance_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="branch" type="varchar(255)"/>
            <column name="gl_code" type="varchar(255)"/>
            <column name="booking_date" type="date"/>
            <column name="dr_movement" type="decimal"/>
            <column name="dr_movement_local" type="decimal"/>
            <column name="cr_movement" type="decimal"/>
            <column name="cr_movement_local" type="decimal"/>
            <column name="currency_code" type="varchar(255)"/>
            <column name="period" type="varchar(255)"/>
            <column name="financial_year" type="varchar(255)"/>
            <column name="cr_balance" type="decimal"/>
            <column name="cr_balance_local" type="decimal"/>
            <column name="dr_balance" type="decimal"/>
            <column name="dr_balance_local" type="decimal"/>

        </createTable>

    </changeSet>

</databaseChangeLog>