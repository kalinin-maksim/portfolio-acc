<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_account_balance_table"
               author="---">

        <createTable tableName="${prefix}account_balance"
                     remarks="balance">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_balance_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="branch" type="varchar(255)"/>
            <column name="account_number" type="varchar(255)"/>
            <column name="booking_date" type="date"/>
            <column name="opening_balance" type="decimal"/>
            <column name="opening_balance_local" type="decimal"/>
            <column name="closing_balance" type="decimal"/>
            <column name="closing_balance_local" type="decimal"/>
            <column name="dr_turnover" type="decimal"/>
            <column name="dr_turnover_local" type="decimal"/>
            <column name="cr_turnover" type="decimal"/>
            <column name="cr_turnover_local" type="decimal"/>
            <column name="currency_code" type="varchar(255)"/>

        </createTable>

    </changeSet>

</databaseChangeLog>