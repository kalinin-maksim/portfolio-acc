<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231101-create_kafka-message_table"
               author="---">

        <createTable tableName="${prefix}kafka_message"
                     remarks="kafka message">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_kafka_message_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="topic"
                    type="VARCHAR2(50)"
                    remarks="топик"/>
            <column name="msg_id"
                    type="VARCHAR2(255)"
                    remarks="id сообщения"/>
            <column name="body"
                    type="text"
                    remarks="тело сообщения"/>
            <column name="created_date"
                    type="timestamp(6)"
                    remarks="Дата/время создания">
            </column>
            <column name="deleted"
                    type="boolean">
            </column>
        </createTable>

        <addUniqueConstraint tableName="${prefix}kafka_message"
                             constraintName="uc_kafka_message_topic_msgId"
                             columnNames="topic,msg_id"/>
    </changeSet>

</databaseChangeLog>