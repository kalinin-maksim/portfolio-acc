<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="2023101-create_mvel-rule_table"
               author="---">

        <createTable tableName="${prefix}mvel_rule"
                     remarks="mvel rule">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_mvel_rule_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)" remarks="role name"/>
            <column name="log_exp"
                    type="VARCHAR(4096)" remarks="logical expression"/>
            <column name="result_exp"
                    type="VARCHAR(4096)" remarks="result expression"/>
            <column name="deleted"
                    type="boolean">
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>