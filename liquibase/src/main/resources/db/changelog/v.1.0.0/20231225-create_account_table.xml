<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20231225-create_account_table"
               author="---">

        <createTable tableName="${prefix}account">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints nullable="false"/>
            </column>
            <column name="class_code" type="varchar(255)"/>
            <column name="branch" type="varchar(3)">
                <constraints nullable="true"/>
            </column>
            <column name="deal_id" type="varchar(255)"/>
            <column name="flexcube_customer_id" type="varchar(255)"/>
            <column name="customer_id" type="varchar(255)"/>
            <column name="currency_code" type="varchar(255)"/>
            <column name="state" type="varchar(8)">
                <constraints nullable="true"/>
            </column>
            <column name="opening_date" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="closing_date" type="date">
                <constraints nullable="true"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="20231225-add_sequence_generator"
               author="---">
        <createSequence sequenceName="account_seq" startValue="1" incrementBy="10"/>
        <addPrimaryKey tableName="${prefix}account" columnNames="id"/>
        <addNotNullConstraint tableName="${prefix}account" columnName="id"/>
    </changeSet>

</databaseChangeLog>