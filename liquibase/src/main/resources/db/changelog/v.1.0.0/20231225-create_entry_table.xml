<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="20231225-create_entry_table"
               author="---">

        <createTable tableName="${prefix}entry">
            <column name="id"
                    type="${uuid_type}"
                    remarks="Unique ID generated by the system">
                <constraints primaryKeyName="pk_entry_id"
                             primaryKey="true"
                             nullable="false"/>
            </column>
            <column name="accounting_id" type="integer"/>
            <column name="event_id" type="varchar(255)"/>
            <column name="event_type" type="varchar(255)"/>
            <column name="maker" type="varchar(255)"/>
            <column name="chaker" type="varchar(255)"/>
            <column name="channel_name" type="varchar(255)"/>
            <column name="deal_id" type="varchar(255)"/>
            <column name="document_id" type="varchar(255)"/>
            <column name="value_date" type="date"/>
            <column name="branch" type="varchar(255)"/>
            <column name="operation_time_stamp" type="varchar(255)"/>
            <column name="source_of_posting" type="varchar(255)"/>
            <column name="debit_account" type="varchar(255)"/>
            <column name="credit_account" type="varchar(255)"/>
            <column name="debit_account_key" type="varchar(255)"/>
            <column name="credit_account_key" type="varchar(255)"/>
            <column name="debit_currency_code" type="varchar(255)"/>
            <column name="credit_currency_code" type="varchar(255)"/>
            <column name="debit_amount" type="decimal"/>
            <column name="credit_amount" type="decimal"/>
            <column name="debit_local_amount" type="decimal"/>
            <column name="credit_local_amount" type="decimal"/>
            <column name="narrative" type="varchar(255)"/>
            <column name="reversal" type="varchar(255)"/>
            <column name="reversal_reference" type="varchar(255)"/>
            <column name="multi_offset" type="varchar(255)"/>
            <column name="rule_name" type="varchar(255)"/>
            <column name="posting_description" type="varchar(255)"/>
        </createTable>

    </changeSet>

    <changeSet id="20231225-add_unique_constraint" author="---">
        <addUniqueConstraint tableName="${prefix}entry" columnNames="accounting_id"/>
    </changeSet>

</databaseChangeLog>